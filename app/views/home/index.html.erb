
<main class="container">
<div id="slider" data-ride="carousel" class="carousel slide">
<ol class="carousel-indicators">
<li data-target="#slider" data-slide-to="0" class="active"></li>
<li data-target="#slider" data-slide-to="1"></li>
<li data-target="#slider" data-slide-to="2"></li></ol>
<div role="listbox" class="carousel-inner">
<% @lattest_books.each_with_index do |book,index| %>
<% if index == 0 %>
<div class="item active"> 
  <% else %>
 <div class="item">  
  <% end %>
<div class="row">
<div class="col-sm-5">
<div class="general-img-wrap">
<% if book.images.attached? %>
<img src=<%=url_for(book.images.first) %> alt=<%= book.images.first.filename %> class="img-shadow general-thumbnail-img"/>
<% end %>
</div></div>  
<div class="col-sm-7">
<div class="mb-60">
<h1><%= book.title %></h1>
<p class="lead"><%= book.description %></p>
<p class="lead small"><%= book.authors.map { |author| author.to_s }.join(', ') %></p>
<div class="general-align">
<button class="btn btn-primary">Buy Now</button></div></div></div></div></div>
<% end %>
</div>
<a href="#slider" role="button" data-slide="prev" class="left carousel-control">
<span aria-hidden="true" class="icon-prev"></span>
<span class="sr-only">Previous</span></a>
<a href="#slider" role="button" data-slide="next" class="right carousel-control">
<span aria-hidden="true" class="icon-next"></span>
<span class="sr-only">Next</span></a></div></main>
<div class="container">
<div class="jumbotron text-center mb-0">
<h2 class="h1">Welcome to our amazing Bookstore!</h2>
<div class="mb-res-50">
<p>We pore through hundreds of new books each month and select the five best we can find to share with our members.</p></div>
<button class="btn btn-default">Get Started</button></div>
<div class="mb-35">
<h3>Best Sellers</h3>
<div class="row">
<% @best_sellers.each do |book| %>
<div class="col-sm-6 col-md-3">
<div class="general-thumb-wrap">
<div class="thumbnail general-thumbnail">
<% if book.images.attached? %>
<img src=<%=url_for(book.images.first) %> alt=<%= book.images.first.filename %> class="img-shadow general-thumbnail-img"/>
<% end %>
<div class="thumb-hover">
<div class="general-thumb-link-wrap">
<a href="#" class="thumb-hover-link">
<i aria-hidden="true" class="fa fa-eye thumb-icon"></i></a>
<a href="#" class="thumb-hover-link">
<i class="fa fa-shopping-cart thumb-icon"></i></a></div></div></div></div>
<div class="mb-35">
<div class="clearfix">
<p class="pull-right font-16 in-gold-500">â‚¬<%= book.price %></p>
<p class="title mr-55"><%= book.title %></p></div>
<span class="divider-sm"></span>
<p class="lead small"><%= book.authors.map { |author| author.to_s }.join(', ') %></p></div></div>
<% end %>
</div></div></div>
